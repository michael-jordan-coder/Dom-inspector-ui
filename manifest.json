{
  "manifest_version": 3,
  "name": "UI Inspector",
  "version": "1.0.0",
  "description": "A Cursor-like visual UI inspector for inspecting and manipulating DOM styles on any website.",
  "permissions": [
    "sidePanel",
    "scripting",
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "serviceWorker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "action": {
    "default_title": "Open UI Inspector"
  }
}
